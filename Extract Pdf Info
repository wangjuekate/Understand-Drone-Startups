import dateutil.parser



book = open_workbook('C:\Users\Jue Wang\Downloads\Findtext.xlsx')


csvfile = open( 'C:\Users\Jue Wang\Downloads\work.csv', 'w+')
fieldnames = ['ID','date','zipcode']
writer1= csv.DictWriter(csvfile, fieldnames=fieldnames)
writer1.writeheader()



for i in range(1,300):
    sheet1= book.sheet_by_index(0)
    ID = sheet1.cell(i,0).value
    result =sheet1.cell(i,1).value
    results = str(result)
    #results = results.strip('\xe2')
    results =re.sub(r'[/x]','',results,re.U)
    #results = re.sub(r'[\x]',' ',results)


    try:
        loc = results.find("By ")
        datetofind = results[loc:loc+55]
        print datetofind
        loc2 = results.find("Dear")
        address = str(results[loc2-20:loc2])

        reg =re.compile ('\d{5}')
        zipcode = reg.findall(address)
        zipcode = "".join(zipcode)
        zipcode = str(zipcode)
        date = dateutil.parser.parse(datetofind , fuzzy=True).date()
        date = str(date)
    except Exception, e:
        date =""
        zipcode =""
    writer1.writerow({'ID':ID, 'date':date, 'zipcode':zipcode})
